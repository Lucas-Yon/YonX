{
  "name": "yonx",
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "bunx concurrently 'bun devStart' 'bun devCodeGen' 'bun devSocket'",
    "devStart": "bun run --hot src/index.tsx",
    "devCodeGen": "bun run --hot src/yonx/codegen.ts",
    "devSocket": "bun run src/yonx/socket.ts",
    "db:migrate": "bun src/server/db/migrate.ts",
    "db:generate": "bunx drizzle-kit generate",
    "compile": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.tsx"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@t3-oss/env-core": "^0.11.1",
    "@unocss/core": "^0.63.4",
    "arctic": "^1.9.2",
    "drizzle-orm": "^0.34.1",
    "hono": "^4.6.4",
    "unocss": "^0.63.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/alpinejs": "^3.13.10",
    "@types/bun": "latest",
    "concurrently": "^9.0.1",
    "drizzle-kit": "^0.25.0"
  }
}
